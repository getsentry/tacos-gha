#!/bin/bash
set -euo pipefail
title="$1"
shift 1

tf_log=tf-log.hcl
console_log=console.log
with-user-env "$TF_ROOT_MODULE" \
  "$@" 2>&1 >"$tf_log" |
  tee "$console_log" \
  && status=$? \
  || status=$? \
;

summary="$(
  if tac "$tf_log" | uncolor | grep -E -m1 '^(Apply complete|No changes|Plan:)'; then
    : :D
  elif cat "$console_log" "$tf_log" | uncolor | grep -E -m1 'error|Error|ERROR'; then
    : D:
  elif tac "$console_log" | uncolor | grep -E -m1 '(success|failure):'; then
    : /shrug
  else
    echo "completed (code $status)"
  fi
)"

(
  echo "### $title: $TF_ROOT_MODULE"
  echo
  cat  # put any extended explanation on stdin

  if (( status == 0 )); then
    # hide boring bits
    echo '<details>'
    echo "  <summary>$summary</summary>"
  else
    # things failed -- show it
    echo "  $summary"
  fi
  echo

  if (( status == 0 )); then
    # hide boring bits
    echo '  <details>'
    echo '    <summary>Commands: (success)</summary>'
  else
    # things failed -- show it
    echo "  Commands: (error code $status)"
  fi

  echo
  echo '```console'
  cat "$console_log"
  echo '```'

  if (( status == 0 )); then
    echo '</details>'
  fi


  echo
  echo '  Result:'
  echo
  echo '```hcl'
  cat "$tf_log"
  echo '```'

  if (( status == 0 )); then
    echo '</details>'
  fi
) |
  gha-step-summary >/dev/null

exit "$status"
