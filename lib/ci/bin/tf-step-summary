#!/bin/bash
set -euo pipefail
title="$1"
script="$2"
tacos_verb="$(basename "$script")"

tf_log=tf-log.hcl
console_log=console.log
with-user-env "$TF_ROOT_MODULE" \
  "$script" 2>&1 >"$tf_log" |
  tee "$console_log" \
  && status=$? \
  || status=$? \
;

# save everything, for analysis during fan-in summary
gha-set-output title <<< "$title"
gha-set-output script <<< "$script"
gha-set-output status <<< "$status"
gha-set-artifact tf_log <<< "$tf_log"
gha-set-artifact console_log <<< "$console_log"
gha-set-output env.HOME <<< "$HOME"
gha-set-output env.GITHUB_WORKSPACE <<< "$GITHUB_WORKSPACE"
gha-set-output env.TF_ROOT_MODULE <<< "$TF_ROOT_MODULE"
gha-set-output env.TACOS_LOCK <<< "${TACOS_LOCK:-}"

summary="$(
  if tac "$tf_log" | uncolor | grep -E -m1 '^(Apply complete|Plan:|No changes)'; then
    : :D
  elif cat "$console_log" "$tf_log" | uncolor | grep -E -m1 'error|Error|ERROR'; then
    : D:
  elif tac "$console_log" | uncolor | grep -E -m1 '(success|failure):'; then
    : /shrug
  else
    echo "completed (code $status)"
  fi
)"
gha-set-output summary <<< "$summary"

if (( status == 0 )); then
  exit_code='success'
else
  exit_code="error code $status"
fi
result_len=$(wc -l < "$tf_log")
if (( status == 0 )); then
  rollup=true
else
  rollup=false
fi

(
  echo "### $title: $TF_ROOT_MODULE"
  echo
  cat  # put any extended explanation on stdin

  if "$rollup"; then
    # hide boring bits
    echo '<details>'
    echo "  <summary>$summary</summary>"
    echo
    echo '  <details>'
    echo "    <summary>Commands: ($exit_code)</summary>"
  else
    # things failed -- show it
    echo "  $summary"
    echo
    echo "  Commands: ($exit_code)"
  fi

  echo
  echo '```console'
  cat "$console_log"
  echo '```'

  if "$rollup"; then
    echo '</details>'
  fi

  if (( result_len > 0 )); then
    echo
    echo '  Result:'
    echo
    echo '```hcl'
    cat "$tf_log"
    echo '```'
  else
    echo '(no output)'
  fi

  if "$rollup"; then
    echo '</details>'
  fi

  echo '<!-- getsentry/tacos-gha "'"$tacos_verb($TF_ROOT_MODULE)"'" -->'
) |
  gha-step-summary >/dev/null

exit "$status"
