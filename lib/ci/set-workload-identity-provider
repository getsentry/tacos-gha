#!/bin/bash
set -euo pipefail

if [ -z ${TF_ROOT_MODULE+x} ]; then
  with-user-env "$TF_ROOT_MODULE" \
      "$TACOS_GHA_HOME/"lib/getsentry-sac/oidc-provider "$@" |
    gha-set-env GETSENTRY_SAC_OIDC \
  ;
else 
  "$TACOS_GHA_HOME/"lib/getsentry-sac/oidc-provider "$@" |
    gha-set-env GETSENTRY_SAC_OIDC \
  ;
fi