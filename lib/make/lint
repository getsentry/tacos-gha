#!/bin/bash
set -euo pipefail
exec >&2  # all output is logging
HERE="$(cd "$(dirname "$0")"; pwd)"

set -x

fail=()
if ! pyright .; then
  fail+=(pyright)
fi
if ! mypy .; then
  fail+=(mypy)
fi

if ! git ls-files '*/py.typed' |
    xargs dirname |
    xargs -n1 -tr "$HERE/"bin/pyright-verifytypes
then
  fail+=(pyright-verifytypes)
fi

if ! git ls-files | "$HERE/"bin/shellcheck; then
  fail+=(shellcheck)
fi


set +x
if [[ "${fail[*]:-}" ]]; then
  echo "FAIL (${fail[*]})"
  exit 1
else
  echo PASS
fi
